package dao;

public class main {

	public static void main(String[] args) {

		int e = 1;
	      int d = 0;
	      
	      for (int i = 1; i < 45; i++) {
	         if( i % 8 == 0) {
	            return;
	         }
	         if( i % 2 == 0) {
	            e = e-1;
	            d = d+1;
	         }
	         e = e+d;
	         System.out.println(i + "일에는 알이 " + e + "개 드래곤은" + d + "마리");
	      }
		
		
	}

}
