
DROP TABLE SHOP

CREATE TABLE SHOP(		/* 상품 테이블 */
	PRODUCT_SEQ NUMBER(5) PRIMARY KEY,	/* like SEQ */
	CODE_NUMBER VARCHAR2(10) NOT NULL,	/* 대분류 ex) 의류:01, 악세사리:02, CD:03 ... */
	PRODUCT_NAME VARCHAR2(100) NOT NULL,
	STOCK_COUNT NUMBER(5) NOT NULL,	/* 재고수 */
	PRICE NUMBER(8) NOT NULL,
	PRODUCT_EXPLAIN VARCHAR2(4000) NOT NULL,
	PRODUCT_IMAGE VARCHAR2(1000) NOT NULL,
	PRODUCT_SIZE VARCHAR2(20)  /* 의류의 경우에만 기입 NULL 가능 */
);


CREATE SEQUENCE PRODUCT_SEQ
START WITH 1
INCREMENT BY 1;

DROP SEQUENCE PRODUCT_SEQ;

SELECT *
FROM SHOP;

DROP TABLE SHOP
CASCADE CONSTRAINT;