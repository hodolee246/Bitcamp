<script type="text/javascript">

function func() {
	obj = document.getElementById("demo");
	obj.style.color = "white";
	obj.style.backgroundColor = "blue";
	obj.style.textAlign = "center";
	obj.style.borderStyle = "double";
	obj.style.borderColor = "#ffff00";
}



</script>

