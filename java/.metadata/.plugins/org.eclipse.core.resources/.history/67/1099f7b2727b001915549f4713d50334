package selectSort;

import java.util.Scanner;

public class mainClass {

	public static void main(String[] args) {
			Scanner scan = new Scanner(System.in);
			
		/*
			Selection Sort
			선택		    정렬
			swap > < 숫자를 교환함
		 */
		int number[] = {5, 2, 1, 3, 4 };
		/*
		 				1, 5, 2, 3, 4
		 					
		 					5, 2, 3, 4
		 					2, 5, 3, 4
		 					
		 						5, 3, 4
		 						3, 5, 4
		 						
		 						   5, 4
		 						   4, 5
			  
		 
		int temp;
		for(int i = 0; i <number.length -1; i++) {
			
			for (int j = i + 1; j < number.length; j++) {
				
				if(number[i] < number[j]) { // 오름차순 // 내림차순 바뀌는데 가운데 부호값만 차이있음.
					temp = number[i];
					number[i] = number[j];
					number[j] = temp;		
				}	
			}
		}
		
		for (int i = 0; i < number.length; i++) {
			System.out.println("number["+i+"] = " + number[i]);
			*/
			/*
				user -> 몇개를 정렬 하시겠습니까?
				>> 입력
			
				배열 확보 input 값에 맞게
				
				오름,내림 차순 입략을 받는다
				
				// process
				정렬처리
				
				// output
				출력
			
		}
		*/
		
		int userIn, userIn2;
		int temp;
		int upDown;
		
		//user -> 몇개를 정렬 하시겠습니까?
		System.out.println("몇개의 숫자를 넣으실지 입력해주세요");
			//	>> 입력
			userIn = scan.nextInt();
			//배열 확보 input 값에 맞게
			int array[] = new int[userIn];
			for (int i = 0; i < userIn; i++) {
				
			System.out.println(userIn +"개의 배열에 넣을 숫자를 입력해주세요" + i+1+ "번째 숫자");
			userIn2 = scan.nextInt();
			array[i] = userIn2 ;
			}
			
			//	오름,내림 차순 입략을 받는다
			System.out.println("정렬하실 방법을 입력해주세요 (1 = 오름차순)(2 = 내림차순)");
			upDown = scan.nextInt();
			// process
			//정렬처리
				for (int i = 0; i < array.length-1; i++) {
					
					for (int k = i+1; k < array.length; k++) {
						if(upDown == 1) {
						if(array[i] > array[k]) {
							temp = array[i];
							array[i] = array[k];
							array[k] = temp ;
						}
						}
						if(upDown == 2) {
						if(array[i] < array[k]) {
							temp = array[i];
							array[i] = array[k];
							array[k] = temp ;
						}
						}
						
						}
					}
				for (int i = 0; i < array.length; i++) {
					System.out.println("array["+i+"] ="+ array[i]);
					
				}
				
			// output
			//출력
		
		
		
		
	}
		
}


