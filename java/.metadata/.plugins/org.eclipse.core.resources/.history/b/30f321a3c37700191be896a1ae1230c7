package project15;

import java.util.Scanner;

public class mainClass {

	public static void main(String[] args) {
	
		// n을 입력받으면 그 n의 갯수만큼 n줄이 그림꼴로 출력되는 프로그램입니다.
		int n;
		Scanner sc = new Scanner(System.in);
		n = sc.nextInt();
		for ( int i = 0 ; i < n; i++ ) {
			
			if ( i < n/2+1 ) {
				for(int j=0; j<=i; j++) {
				System.out.print("*");
				}
			}else {
				for(int j=0; j<n-i+1; j++)
				
			}
			System.out.println();
		}
		
		}

	}


