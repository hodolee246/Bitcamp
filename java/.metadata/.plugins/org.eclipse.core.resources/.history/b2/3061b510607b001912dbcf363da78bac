package study5;

public class mainClass {

	public static void main(String[] args) {

		// baseball
		
		
		
		// 선언부
		int r_num[] = new int[3];
		int u_num[] = new int[3];
		boolean clear;
		
		
		// 초기화
		r_num = new int[3];
		u_num = new int[3];
		clear = false;
		
		
		// 1. random number(1~9) -> 3개
		//		n1 != n2 != n3
	while(true) {	
		r_num[0] = (int)((Math.random()*9 +1));
		r_num[1] = (int)(Math.random()*10);
		r_num[2] = (int)(Math.random()*10);
		
		if(r_num[0] != r_num[1]
		&& r_num[0] != r_num[2]
		&& r_num[1] != r_num[2]) {
			break;
		}
	}
	
	int rnum[] = {1, 2, 3, 4, 5,  6, 7, 8, 9};
	int temp;
	int n1, n2;
	for (int i = 0; i < 54; i++) {
		n1 = (int)(Math.random()*10);
		n2 = (int)(Math.random()*10);
		
		temp = rnum[n1];
		rnum[n1] = rnum[n2];
		rnum[n2] = temp;
	}
	for (int i = 0; i < rnum.length; i++) {
		System.out.println("rnum[" + i + "] = " + rnum[i]);
	}
/*	
	for (int i = 0; i < r_num.length; i++) {
		System.out.println("r num["+i+"]" + "=" + r_num[i]);
		
	}	*/
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		//LOOP
		
		// 2. user number input (1~9) -> 3개
		//		u1 != u2 != u3
		
		// 3. finding(strike, ball)
		//		strike : 자리, 숫자
		//		ball   : 숫자
		
		// 4. message(printing)
		
		// LOOP 
		
		// 5. result(clear, lose)
	}

}















