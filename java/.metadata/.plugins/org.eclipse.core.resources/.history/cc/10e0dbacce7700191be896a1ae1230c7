package project15;

import java.util.Scanner;

public class mainClass {

	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		int n;
		n = sc.nextInt();
		for(int i = 0; i<n; i++)
		{
			for(int y=0;y<=i;y++)
			{
			System.out.print("*");
			}
			System.out.println();
		}
		for(int i = 0; i<n-1; i++)
		{
			for(int y = n-1;y>i;y--)
			{
				System.out.print("*");
			}
			System.out.println();
		}
		
		}
		
		}
