package selectSort;

public class mainClass {

	public static void main(String[] args) {

		/*
			Selection Sort
			선택		    정렬
			swap > < 숫자를 교환함
		 */
		int number[] = {5, 2, 1, 3, 4 };
		/*
		 				1, 5, 2, 3, 4
		 					
		 					5, 2, 3, 4
		 					2, 5, 3, 4
		 					
		 						5, 3, 4
		 						3, 5, 4
		 						
		 						   5, 4
		 						   4, 5
			  
		 */
		int temp;
		for(int i = 0; i <number.length -1; i++) {
			
			for (int j = i + 1; j < number.length; j++) {
				
				if(number[i] > number[j]) { // 오름차순
					temp = number[i];
					number[i] = nuber[j];
					number[j] = temp;		
				}	
				}
			}
		}
		
	}

}
