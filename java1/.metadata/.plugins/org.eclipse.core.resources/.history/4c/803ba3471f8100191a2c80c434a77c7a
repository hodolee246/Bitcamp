package Student;

public class Student {
	
	public String name;
	public int ban, no, kor, eng, math;

	
	
	public int getTotal(int kor,int eng,int math) {
		int total = kor + eng + math;
		return total;
	}
	
	public double getAverage() {
		
		double avg = Math.round((double)getTotal(kor, eng, math) / 3*10)/10;
		
		return avg;
	}
	
	
}
