package view;

import java.awt.Button;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.TextField;
import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;

public class WindowText extends Frame implements WindowListener {
	
	public WindowText() {
		super("layout");
	//	setLayout(mgr);
	//	setLayout(new GridLayout(3, 1));
		setLayout(null);
		
	// 	Label
		Label lable =  new Label("this is Lable");
		lable.setBounds(100, 100, 150, 30);
		lable.setBackground(new Color(147, 30, 62));
		add(lable);
		
	// 	Button
		Button button = new Button();
		button.setBounds(200, 200, 80, 20);
		button.setLabel("Button");
		add(button);
		
	//	TextField	
		TextField textField = new TextField();
		textField.setBounds(300, 400, 50, 15);
		add(textField);
		
		setSize(640, 480);
		setLocation(10, 15);
		setVisible(true);
		
		addWindowListener(this);
	}

	@Override
	public void windowActivated(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void windowClosed(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void windowClosing(WindowEvent arg0) {
		// TODO Auto-generated method stub
		System.exit(0);
	}

	@Override
	public void windowDeactivated(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void windowDeiconified(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void windowIconified(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void windowOpened(WindowEvent arg0) {
		// TODO Auto-generated method stub

	}

}
