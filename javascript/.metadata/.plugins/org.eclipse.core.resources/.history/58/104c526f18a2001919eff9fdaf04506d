<button type="button" onclick="_random()">리롤</button>

<script type="text/javascript">

var imgArray = new Array();
imgArray[0] = "sai_1.gif";
imgArray[1] = "sai_2.gif";
imgArray[2] = "sai_3.gif";
imgArray[3] = "sai_4.gif";
imgArray[4] = "sai_5.gif";
imgArray[5] = "sai_6.gif";

function _random() {
	var diceA = Math.floor((Math.random()*6));	
	imgArray[diceA];
	var diceB = Math.floor((Math.random()*6));
}

