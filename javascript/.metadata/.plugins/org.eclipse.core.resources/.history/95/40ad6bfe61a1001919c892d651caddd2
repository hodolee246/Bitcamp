<script type="text/javascript">

function clickIMG() {
	alert("타히티의 사진입니다.!!!!!!!");
}
function high() {
	alert("아 인터넷에 검색하십시오.");
}
function add() {
	alert("14");
}
function minus() {
	alert("6");
}
function mult() {
	alert("40");
}
function devide() {
	alert("2");
}
function mod() {
	alert("2");
}
var num = 40800;
function Money(chkbox){
	if(chkbox.cheked == true){
		num = num + 20000;
	}else{
		num = num - 20000;
	}
	document.getElementById("baseball").value = num;
}



</script>

