 <script type="text/javascript">
 posY = 0;
 function viewScroll() {
	window.scroll(0, posY);
	posY = posY + 2;
	if(posY == 300) posY = 0;
	
	setTimeout("viewScroll()", 100);
}
 
 </script>
 
