<script type="text/javascript">

function func() {
	

	var number = 128;
	
	// 10진수 -> 2진수, 8진수, 16진수
	
	document.getElementById("demo").innerHTML = 
		"10진수:" + number + "<br>" +
		"2진수:" + number.toString(2) + " <br> " +
		"8진수:" + number.toString(8) + " <br> " +
		"16진수:" + number.toString(16) + " <br> " +
	
	// 2진수, 8진수, 16진수 -> 10진수
	
}
</script>

