<script type ="text/javascript">

$(function () {

	$('#btn').click(function () {
		var txt = "<br>답글:<input type ='text' id = 't1'>";
		$('#answer').append(txt);

		var btn = "<br><br><button type='button' id='anbtn'>작성완료</button>";
		$('#answer').append(btn);
	});

});
	/* 1. div 태그에 resource를 모아 놓고 hide로 설정
	     클릭시 show로 설정하여 보여준다.
	*/
	$(document).on("click", "#anbtn", function () {
		alert($("t1").val());
	});
</script>



