<h3>추가입력</h3>

<table border="0" id="append_table">
<colgroup>
	<col style="width: 70px">
	<col style="width: 200px">
	<col style="width: 300px">
	<col style="width: 200px">
</colgroup>
<thead>
<tr>
	<th>번호</th><th>이름</th><th>생년월일</th><th>Action</th>
</tr>
</thead>

<tbody>
<tr>
	<td><input type="text" id="add_no"></td>
	<td><input type="text" id="add_name"></td>
	<td><input type="text" id="add_birth"></td>
	<td><button type="button" id="append_row">데이터 추가</button></td>
	
</tr>
</tbody>

</table>

<script type="text/javascript">

$(function () {
	
	$("#append_row").on("click", function () {
		
		$("#list_table").append(
			$("<tr></tr>").append(
				$("<th></th>").append($("#add_no").val()),
				$("<td></td>").append($("#add_name").val()),
				$("<td></td>").append($("#add_birth").val()),
				$("<td></td>").append(
					$("<a>").attr("href", "#").addClass("delete-link").append("삭제")	
				)
				
			)		
		);
		
	});
	
	$("a").on("click", function () {
		$(this).parent().parent().remove();
	})
	
});

</script>

