<!-- image의 크기를 입력해서 변경 -->

<div id="d1">
<img alt="" src="pic1.jpg">
</div>

width:<input type="text" id="width"><br>
height:<input type="text" id="height"><br>
<br>
<br>
<button type="button">크기 변경</button>

<script type="text/javascript">

$(function () {
	$("button").click(function () {
		$("#d1 img".css({
			"width":$("#width").val(),
			"height":$("#height").val()
		})
	});
});

</script>
