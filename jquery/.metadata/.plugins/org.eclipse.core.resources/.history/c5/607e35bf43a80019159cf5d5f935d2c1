<script type="text/javascript">
$(function () {
	
	$("button").click(function () {
		// font color 변경
		$("#q01").css("color", "red");	// red or #ff0000
		
		// font color, background-color 변경
		$("#q02").css({"color":"red",
						"background-color":"skyblue"	
		});
		
	//	$("#q03").text("헬로우 제이쿼리");
		$("#q03").html("<b>헬로우</b> 제이쿼리");
		
		// html 변경
		$("#q04").html("<a href ='#'>World JQuery</a>");
	});
	
});


</script>


