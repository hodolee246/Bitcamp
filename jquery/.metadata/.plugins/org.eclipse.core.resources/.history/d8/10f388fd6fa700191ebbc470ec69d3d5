<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>
<body>

<h3>
JQuery
</h3>
<!-- 첫번째방법 -->
<form>
이름:<input type="text" id="name"><br>
나이:<input type="text" id="age"><br>
주소:<input type="text" id="address"><br>
<button type="button" id="btn">전송</button>



</form>

<script type="text/javascript">
$(function () {
	/* $("#btn").click(function () {	// 아래와 약간의 차이가존재한다.
		
	}); */
	$("#btn").on("click", function () {
//		alert("x");	
		location.href = "NewFile1.jsp?name=" + $("#name").val()
				+ " &age= " + $("#age").val()
				+ "&address="+ $("#address").val();           
	});
});
</script>


<br><br><br>

<!-- 두번째 방법 -->
<form id="frm">		<!-- form 에 아이디 값이 존재해야함 -->
이름:<input type="text" name="name"><br>
나이:<input type="text" name="age"><br>
주소:<input type="text" name="address"><br>
<button type="button" id="frmbtn">전송</button>
</form>

<script type="text/javascript">
$(function () {
	$("#frmbtn").click(function () {
		$("#frm").attr("action", "NewFile1.jsp").submit();	// 어트리뷰트를 사용하여 jsp 에 데이터를 넘김
	});
});
</script>


</body>
</html>



