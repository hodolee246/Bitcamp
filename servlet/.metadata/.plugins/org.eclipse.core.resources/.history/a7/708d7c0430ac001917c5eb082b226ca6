<script type="text/javascript">

$("#_btnLogin").click(function() {
	
	if( $("#id").val().trim() == ""){
		alert("id를 입력해주십시오.");
		$("#id").focus();
	}else if($("#pwd").val().trim() == ""){
		alert("password를 입력해주십시오.");
		$("#pwd").focus();
	}else{
		$("#frm").attr({}"action":"loginAF"}).submit();
	}
	
	
	
});



</script>


