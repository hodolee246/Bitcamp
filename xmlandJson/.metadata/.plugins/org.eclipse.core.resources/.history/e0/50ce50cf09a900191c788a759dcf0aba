<script type="text/javascript">
var text = "<bookstore>" +
				"<book>" +
					"<title>탈무드</title>" +
					"<author>랍비들</author>" +
					"<year>2001</year>" +
				"</book>" +
				"<book>" +
					"<title>이솝이야기</title>" +
					"<author>누군가</author>" +
					"<year>2005</year>" +
				"</book>" +
			"</bookstore>";
			
var parser, xmlDoc;

parser = new DOMParser();
xmlDoc = parser.parseFromString(text, "text/html");	/* 넣을 문자열, 형식 */

document.getElementById("demo").innerHTML
//=	xmlDoc.getElementsByTagName("book")[0].childNodes[0].nodeName;	// title 이라고 출력된다.


//	= xmlDoc.getElementsByTagName("book")[0].childNodes[1].nodeName;	// author 이라고 출력된다.
 
= xmlDoc.getElementsByTagName("book")[0].childNodes[0].childNodes[0].nodeValue;
 
</script>



